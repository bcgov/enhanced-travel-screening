{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "noEmit": false,
    "esModuleInterop": true,
    "allowJs": true,
    "lib": ["esnext"],
    "baseUrl": ".",
    "paths": {
      "custom_modules/*": ["src/lambda/layer/common/nodejs/custom_modules/*"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["**/*.ts", "**/*.test.ts"]
}
