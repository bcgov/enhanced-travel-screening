{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["esnext"]
  },
  "exclude": ["node_modules", "dist"],
  "include": ["**/*.ts", "**/*.test.ts"]
}
